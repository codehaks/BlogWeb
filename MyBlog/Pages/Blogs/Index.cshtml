@page
@model MyBlog.Pages.Blogs.IndexModel
@{
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Desc</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model.Blogs)
        {
        <tr>
            <td>@blog.Id</td>
            <td>@blog.Name</td>
            <td>@blog.Description</td>
            <td>
                <a asp-page="Edit" asp-route-id="@blog.Id" class="btn btn-primary">Edit</a>
            </td>
        </tr>
        }
    </tbody>
</table>